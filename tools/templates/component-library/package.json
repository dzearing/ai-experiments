{
  "name": "@claude-flow/{{name}}",
  "version": "0.0.1",
  "private": true,
  "description": "{{description}}",
  "type": "module",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    },
    "./styles.global.css": "./lib/styles.global.css"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tcm src && tsc -b && cp src/**/*.css lib/",
    "dev": "concurrently \"tsc -b --watch\" \"tcm src --watch\"",
    "clean": "repo-scripts clean",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "test": "echo 'No tests configured'",
    "typecheck": "tcm src && tsc --noEmit",
    "tcm": "tcm src",
    "tcm:watch": "tcm src --watch"
  },
  "dependencies": {
    "classnames": "^2.5.1"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@claude-flow/tsconfig": "workspace:*",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "concurrently": "^8.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typed-css-modules": "^0.9.1",
    "typescript": "~5.8.3"
  }
}