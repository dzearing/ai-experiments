  --color-input-border: #424242;
  --color-input-border-hover: #525252;
  --color-input-border-focus: var(--color-body-link);
  --color-input-icon: #9e9e9e;
  
  --color-input-shadow-focus: 0 0 0 2px rgba(79, 195, 247, 0.3);
  
  --color-input-text-disabled: #757575;
  --color-input-text-placeholder-disabled: #616161;
  --color-input-border-disabled: #353535;
  --color-input-icon-disabled: #616161;
  
  --color-input-text-readonly: #bdbdbd;
  --color-input-border-readonly: #353535;
  
  --color-input-border-error: #ef5350;
  --color-input-border-error-focus: #f44336;
  --color-input-shadow-error: 0 0 0 2px rgba(239, 83, 80, 0.3);
  --color-input-icon-error: #ef5350;
  
  /* Dialog surface adjustments */
  --color-dialog-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
  --color-modal-shadow: 0 20px 60px rgba(0, 0, 0, 0.7);
  
  /* Special surface adjustments */
  --color-neutralButton-text: #ffffff;
  --color-neutralButton-text-disabled: #757575;
  --color-neutralButton-icon: #e0e0e0;
  --color-neutralButton-border: #757575;
  
  --color-menu-shadow: rgba(0, 0, 0, 0.4);
  
  /* Selection colors */
  --color-selection-background: var(--color-body-link);
  --color-selection-text: #121212;
  
  /* Backdrop */
  --color-backdrop-background: rgba(0, 0, 0, 0.8);
  --color-backdrop-background-blur: rgba(18, 18, 18, 0.95);
}

