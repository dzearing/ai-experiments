{
  "name": "@ui-kit/core",
  "version": "0.0.1",
  "private": true,
  "description": "Framework-agnostic design tokens, themes, and surfaces for building accessible UIs",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./bootstrap.js": {
      "types": "./dist/runtime/bootstrap.d.ts",
      "import": "./dist/runtime/bootstrap.js"
    },
    "./bootstrap.iife.js": "./dist/bootstrap.min.js",
    "./surfaces.js": {
      "types": "./dist/surfaces.d.ts",
      "import": "./dist/surfaces.js"
    },
    "./themes/*": "./dist/themes/*",
    "./dev.js": {
      "types": "./dist/dev/index.d.ts",
      "import": "./dist/dev/index.js"
    },
    "./build/inline-bootstrap.js": {
      "types": "./dist/build/inline-bootstrap.d.ts",
      "import": "./dist/build/inline-bootstrap.js"
    },
    "./vite": {
      "types": "./dist/vite/index.d.ts",
      "import": "./dist/vite/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsx scripts/build.ts",
    "build:themes": "tsx scripts/build-themes.ts",
    "dev": "tsx watch scripts/build.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.20.0",
    "tsx": "^4.20.3",
    "typescript": "^5.4.0",
    "vite": "^5.4.0",
    "vitest": "^3.2.4"
  }
}
