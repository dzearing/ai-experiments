  --color-overlayDark-background: rgba(0, 0, 0, 0.8);

  /* Keep button surfaces mostly the same but adjust disabled states */
  --color-buttonPrimary-background-disabled: #1565c0;
  --color-buttonDanger-background-disabled: #c62828;
  --color-buttonSuccess-background-disabled: #388e3c;

  --color-buttonNeutral-background: #424242;
  --color-buttonNeutral-background-hover: #4a4a4a;
  --color-buttonNeutral-background-active: #525252;
  --color-buttonNeutral-background-disabled: #2d2d2d;

  /* Notification surfaces (subtle but visible) */
  --color-noticeInfo-background: #1e3a5f;
  --color-noticeSuccess-background: #1e3a1e;
  --color-noticeWarning-background: #4a342a;
  --color-noticeDanger-background: #3d1f1f;

  /* Code surfaces */
  --color-codeBlock-background: #1a1a1a;
  --color-codeInline-background: #2d2d2d;

  /* Input surfaces */
  --color-input-background: #1e1e1e;
  --color-input-background-hover: #252525;
  --color-input-background-focus: #1e1e1e;
  --color-input-background-disabled: #1a1a1a;
  --color-input-background-readonly: #1a1a1a;
  --color-input-background-error: #2d1a1a;

  /* Dialog surfaces */
  --color-dialog-background: #2d2d2d;
  --color-modal-background: #353535;
  --color-tooltip-background: #616161;
  --color-menu-background: #1e1e1e;

  /* Body surface colors adjusted for dark mode */
  --color-body-text: #ffffff;
  --color-body-text-soft10: #e0e0e0;
  --color-body-text-soft20: #bdbdbd;
  --color-body-text-soft30: #9e9e9e;
  --color-body-text-soft40: #757575;
  --color-body-text-hard10: #ffffff;

  /* Text states for dark mode */
  --color-body-text-hover: var(--color-body-text-hard10);
  --color-body-text-disabled: var(--color-body-text-soft40);
  --color-body-text-selected: #4fc3f7;
  --color-body-text-error: #ef5350;

  --color-body-link: #4fc3f7;
  --color-body-link-hover: #81d4fa;
  --color-body-link-active: #29b6f6;
  --color-body-link-visited: #b39ddb;

  --color-body-border: #424242;
  --color-body-border-soft10: #353535;
  --color-body-border-soft20: #2d2d2d;
  --color-body-border-hard10: #616161;
  --color-body-border-hard20: #757575;

  --color-body-background: #2d2d2d;
  --color-body-background-soft10: #242424;
  --color-body-background-hard10: #353535;

  --color-body-background-hover: var(--color-body-background-hard10);
  --color-body-background-selected: #1976d2;
  --color-body-background-selected-hover: #1565c0;

  /* Panel surface adjustments */
  --color-panelRaised-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
  --color-panelElevated-shadow: 0 2px 6px rgba(0, 0, 0, 0.4);
  --color-panelFloating-shadow: 0 4px 12px rgba(0, 0, 0, 0.5);

  /* Notification text colors (on dark backgrounds) */
  --color-noticeInfo-text: #90caf9;
  --color-noticeInfo-text-hard10: #bbdefb;
  --color-noticeInfo-link: #bbdefb;
  --color-noticeInfo-link-hover: #e3f2fd;
  --color-noticeInfo-border: #283593;

  --color-noticeSuccess-text: #a5d6a7;
  --color-noticeSuccess-text-hard10: #c8e6c9;
  --color-noticeSuccess-link: #c8e6c9;
  --color-noticeSuccess-link-hover: #e8f5e9;
  --color-noticeSuccess-border: #2e7d32;

  --color-noticeWarning-text: #ffcc80;
  --color-noticeWarning-text-hard10: #ffe0b2;
  --color-noticeWarning-link: #ffe0b2;
  --color-noticeWarning-link-hover: #fff3e0;
  --color-noticeWarning-border: #5d4037;

  --color-noticeDanger-text: #ef9a9a;
  --color-noticeDanger-text-hard10: #ffcdd2;
  --color-noticeDanger-link: #ffcdd2;
  --color-noticeDanger-link-hover: #ffebee;
  --color-noticeDanger-border: #5d1f1f;

  /* Code surface adjustments */
  --color-codeBlock-text: #e0e0e0;
  --color-codeBlock-text-soft20: #9e9e9e;
  --color-codeBlock-text-soft10: #bdbdbd;
  --color-codeBlock-link: #4fc3f7;
  --color-codeBlock-border: #424242;
  --color-codeBlock-background: #2d2d2d;

  --color-codeInline-text: #f48fb1;
  --color-codeInline-border: #424242;

  /* Input surface adjustments */
  --color-input-text: #ffffff;
  --color-input-text-placeholder: #757575;
  --color-input-border: #424242;
  --color-input-border-hover: #525252;
  --color-input-border-focus: var(--color-body-link);
  --color-input-icon: #9e9e9e;

  --color-input-shadow-focus: 0 0 0 2px rgba(79, 195, 247, 0.3);

  --color-input-text-disabled: #757575;
  --color-input-text-placeholder-disabled: #616161;
  --color-input-border-disabled: #353535;
  --color-input-icon-disabled: #616161;

  --color-input-text-readonly: #bdbdbd;
  --color-input-border-readonly: #353535;

  --color-input-border-error: #ef5350;
  --color-input-border-error-focus: #f44336;
  --color-input-shadow-error: 0 0 0 2px rgba(239, 83, 80, 0.3);
  --color-input-icon-error: #ef5350;

  /* Dialog surface adjustments */
  --color-dialog-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
  --color-modal-shadow: 0 20px 60px rgba(0, 0, 0, 0.7);

  /* Special surface adjustments */
  --color-buttonNeutral-text: #ffffff;
  --color-buttonNeutral-text-disabled: #757575;
  --color-buttonNeutral-icon: #e0e0e0;
  --color-buttonNeutral-border: #757575;

  --color-menu-shadow: rgba(0, 0, 0, 0.4);

  /* Selection colors */
  --color-selection-background: var(--color-body-link);
  --color-selection-text: #121212;

  /* Backdrop */
  --color-backdrop-background: rgba(0, 0, 0, 0.8);
  --color-backdrop-background-blur: rgba(18, 18, 18, 0.95);
}
