    "@ui-kit/react": "workspace:*",
    "@ui-kit/react-chat": "workspace:*",
    "@ui-kit/react-markdown": "workspace:*",
    "@ui-kit/router": "workspace:*",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "uuid": "^11.1.0",
    "y-codemirror.next": "^0.3.5",
    "y-indexeddb": "^9.0.12",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.28"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.53.2",
